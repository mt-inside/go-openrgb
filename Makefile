.DEFAULT_GOAL := redshift

.PHONY: lint
lint:
	go fmt ./...
	go vet ./...
	golint ./...
	golangci-lint run ./...
	go test ./...

.PHONY: gen
gen:
	go generate ./...

.PHONY: basic
basic: lint gen
	go run ./examples/basic/...

.PHONY: info
info: lint gen
	go run ./examples/info/...

.PHONY: redshift
redshift: lint gen
	go run ./examples/redshift/...
